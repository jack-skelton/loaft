body
    #side-menu.row.fixed
        .col.hide-on-small-only.m3.l2
            ul
                li
                    a(href='#about') Contact
                li
                    a(href='#about') Projects
                li
                    a(href='#about') Services
                li
                    a(href='#projects') About
                li
                    a(href='#contact') Loaft

    #header.parallax-container
        .parallax
            .container
                .row
                    .col.m7
                        h1 Loaft
                        h2 <span class="element"></span>
                        img(src="/images/1.jpg" style="width: 100%; z-index: 500")
                    .col.m5
                        #power-symbol
                            div(style="position: relative;")
                                .power
                            <video autoplay loop>
                                <source src="/images/light-bulb.mp4" type="video/mp4">
                            </video>

                                        

                   
                    

    .section.white
        .container
            
            h2 a sydney web design agency
            .section.whiteSpace
            .row(id="about").scrollspy
                .col.s12
                    h1 what are we?
                    h3 Specialists in web and graphics.
                    h3 We transverse the language of design to connect you to your audience through beautiful solutions

            .section.whiteSpace
                       
            .row
                div(class="col s12 m4")
                    h1 quality
                    i.large.material-icons aspect_ratio
                    h3 We enforce responsive design among visually stunning websites
                div(class="col s12 m4")
                    h1 impact
                    i.large.material-icons library_books
                    h3 We serve the great people of sydney
                div(class="col s12 m4")
                    h1 speed
                    i.large.material-icons fast_forward
                    h3 If youve got a growing business, we'd like to hear from you    
           
            .section.whiteSpace
            h1(id="projects").scrollspy our work
            .row
                .col.s12.m4
                    img.materialboxed(width='300', src='images/1.jpg')
                .col.s12.m4
                    img.materialboxed(width='300', src='images/2.jpg')    
                .col.s12.m4
                    img.materialboxed(width='300', src='images/4.jpg')
            
            .section.whiteSpace

    .section.contact(id="contact").scrollspy
        .container.white
            h2 contact us
            h3 email:
            h3 your message:
            h5.right-align loaft@email.com

            
                    
                
                       
                
                                         
    
